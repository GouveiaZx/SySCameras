{
  "name": "sistema-vigilancia-ip-frontend",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://seu-dominio.com",
    "NEXT_PUBLIC_SUPABASE_URL": "https://mmpipjndealyromdfnoa.supabase.co",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im1tcGlwam5kZWFseXJvbWRmbm9hIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDc4NDUxNjMsImV4cCI6MjA2MzQyMTE2M30.nE6einLwJZGOHlWgJCUZeKNOFNPOo0QAGUDPUrO4OLo",
    "NEXT_PUBLIC_STREAMING_URL": "https://seu-dominio.com",
    "NEXT_PUBLIC_HLS_BASE_URL": "https://seu-dominio.com/live"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://seu-dominio.com/api/$1"
    },
    {
      "src": "/live/(.*)",
      "dest": "https://seu-dominio.com/live/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
} 