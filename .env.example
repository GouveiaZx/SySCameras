# ================================
# CONFIGURAÇÕES DO SISTEMA DE VIGILÂNCIA IP
# ================================

# Ambiente
NODE_ENV=production

# Banco de dados Supabase
DATABASE_URL=postgresql://postgres:password@localhost:5432/surveillance_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Autenticação JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Email - Resend
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx

# Armazenamento Wasabi S3
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET=your-bucket-name
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.wasabisys.com

# Worker - Configurações de vídeo
SEGMENT_DURATION=1800
MAX_CONCURRENT_RECORDINGS=10
VIDEO_QUALITY=720p
CLEANUP_OLDER_THAN_DAYS=30

# URLs dos serviços (para Docker)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WORKER_URL=http://localhost:3002

# PostgreSQL local (opcional se não usar Supabase)
POSTGRES_PASSWORD=your-postgres-password

# SSL/TLS (para produção)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoramento
LOG_LEVEL=info
MAX_LOG_SIZE=100MB
LOG_ROTATION_DAYS=7

# Rate Limiting
API_RATE_LIMIT=10
LOGIN_RATE_LIMIT=1

# CORS (para produção, especificar domínio)
CORS_ORIGIN=*

# Timezone
TZ=America/Sao_Paulo

# SRS
SRS_RTMP_BASE_URL=rtmp://your-srs-server/live

# API
PORT=3001
FRONTEND_URL=http://localhost:3000
