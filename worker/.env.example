# Railway Production Environment
NODE_ENV=production
PORT=$PORT

# Backend API
BACKEND_URL=https://backend-production.up.railway.app

# Storage paths
HLS_OUTPUT_PATH=/tmp/hls
SNAPSHOTS_PATH=/tmp/snapshots

# Stream settings
HLS_SEGMENT_TIME=4
HLS_LIST_SIZE=10

# FFmpeg (using ffmpeg-static)
FFMPEG_PATH=auto 